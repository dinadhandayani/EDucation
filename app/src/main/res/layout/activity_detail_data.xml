<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dtl_item_detail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/box_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_dtl_item_detail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-80dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_radius">

                <RelativeLayout
                    android:id="@+id/box_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_dtl_name"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp">

<!--                    <ImageView-->
<!--                        android:id="@+id/ic_loc"-->
<!--                        android:layout_width="12dp"-->
<!--                        android:layout_height="12dp"-->
<!--                        android:layout_marginTop="3dp"-->
<!--                        android:alpha=".5"-->
<!--                        android:src="@drawable/ic_location" />-->

                    <TextView
                        android:id="@+id/txt_dtl_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:paddingRight="14dp"
                        android:textColor="@color/colorfontblack"
                        android:textSize="12sp"
                        tools:text="Jln. PDAM , PEA BUMBUNG, Kec. Singkil Kab. Aceh Singkil" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_dtl_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/colorfontblack"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:text="SD Negeri 1 Pemuka" />

                <TextView
                    android:id="@+id/txt_dtl_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"
                    android:paddingLeft="14dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="Tentang Sekolah"
                    android:textColor="@color/colorfontblack"
                    android:textSize="16sp" />

<!--                <TextView-->
<!--                    android:id="@+id/txt_dtl_about2"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/line"-->
<!--                    android:layout_toRightOf="@id/txt_dtl_about"-->
<!--                    android:paddingLeft="4dp"-->
<!--                    android:paddingTop="8dp"-->
<!--                    android:paddingBottom="4dp"-->
<!--                    android:textColor="@color/colorfontblack"-->
<!--                    android:textSize="16sp"-->
<!--                    tools:text="nama tempat" />-->
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/box_location"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGray" />
                <ScrollView
                    android:id="@+id/sv_desc"
                    android:layout_below="@id/txt_dtl_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_dtl_desc"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:padding="14dp"
                        android:textColor="@color/colorfontblack"
                        android:textSize="12sp"
                        tools:text="desc" />
                </ScrollView>
                <TableLayout
                    android:id="@+id/tr_identitas"
                    android:layout_below="@id/sv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">
                    <TableRow android:id="@+id/kebutuhan1">
                        <TextView
                            android:id="@+id/txt_keb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebutuhan 1"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontblack"/>
                        <TextView
                            android:id="@+id/txt_kebutuhan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorfontblack"
                            tools:text="Kebutuhan1"/>
                    </TableRow>
                    <TableRow android:id="@+id/kebutuhan2"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/txt_keb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebutuhan 2"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontblack"/>
                        <TextView
                            android:id="@+id/txt_kebutuhan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorfontblack"
                            tools:text="Kebutuhan1"/>
                    </TableRow>
                    <TableRow android:id="@+id/stabos"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/txt_sb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status Bos"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontblack"/>
                        <TextView
                            android:id="@+id/txt_statusbos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorfontblack"
                            tools:text="Status Bos"/>
                    </TableRow>
                    <TableRow android:id="@+id/waktu"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontblack"/>
                        <TextView
                            android:id="@+id/txt_waktu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorfontblack"
                            tools:text="Waktu"/>
                    </TableRow>
                    <TableRow android:id="@+id/dayalistrik"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/txt_dl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daya Listrik"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontblack"/>
                        <TextView
                            android:id="@+id/txt_dayalistrik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorfontblack"
                            tools:text="Daya Listrik"/>
                    </TableRow>
                    <TableRow android:id="@+id/aksesinternet"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/txt_ai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Akses Internet"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorfontblack"/>
                    <TextView
                        android:id="@+id/txt_aksesinternet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorfontblack"
                        tools:text="Akses Internet"/>
                     </TableRow>
                    <TableRow android:id="@+id/sumberlistrik"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/txt_sl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sumber Listrik"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontblack"/>
                        <TextView
                            android:id="@+id/txt_sumberlistrik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorfontblack"
                            tools:text="Sumber Listrik"/>
                    </TableRow>
                    <TableRow android:id="@+id/karakteristik"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:id="@+id/txt_karakter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="karakteristik"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorfontblack"/>
                        <TextView
                            android:id="@+id/txt_karakteristik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorfontblack"
                            tools:text="karakteristik"/>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>